---
import UserNav from '../components/UserNav.astro';

const { title, currentPage, showUserNav = true } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/src/styles/global.css" /> <!-- Importa aquÃ­ tu archivo de estilos de Tailwind -->
		<title>Astro Basics</title>
	</head>
	<body class="bg-gradient-to-br from-purple-600 via-red-500 to-yellow-500">
		{showUserNav && <UserNav currentPage={currentPage} />}
		<div class="">
		  <slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
	  const navbar = document.querySelector('nav');
	  if (navbar) {
		const navbarHeight = navbar.offsetHeight;
		document.body.style.paddingTop = `${navbarHeight}px`;
	  }
	});
</script>
